<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="estateco.estate.FragmentNewPropertyStep1">

    <!-- TODO: Update blank fragment layout -->
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <!--General Details-->
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Listing Details"
                android:textAlignment="center"
                android:textSize="24sp"
                android:textStyle="normal|bold" />

            <CheckBox
                android:id="@+id/CHKBXForSale"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="I am selling"
                android:textAlignment="center" />

            <CheckBox
                android:id="@+id/CHKBXForLease"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="i am renting"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="General Details"
                android:textAlignment="center"
                android:textSize="24sp"
                android:textStyle="normal|bold" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Title"
                android:textAlignment="center" />

            <EditText
                android:id="@+id/ETTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Title"
                android:inputType="text|textPersonName"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/textView13"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Description"
                android:textAlignment="center" />

            <EditText
                android:id="@+id/ETDesc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Description"
                android:inputType="text|textPersonName"
                android:textAlignment="center" />


            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Address Details"
                android:textAlignment="center"
                android:textSize="24sp"
                android:textStyle="normal|bold" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Postal Code"
                android:textAlignment="center" />

            <EditText
                android:id="@+id/ETPostalCode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Postal Code"
                android:inputType="number"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Unit Number"
                android:textAlignment="center" />

            <EditText
                android:id="@+id/ETUnit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Unit Number"
                android:inputType="textPersonName"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Address Name"
                android:textAlignment="center" />

            <EditText
                android:id="@+id/ETAddressName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Address Name"
                android:inputType="text|textPersonName"
                android:textAlignment="center" />

            <Button
                android:id="@+id/BTNNewListingNext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Next" />

            <Button
                android:id="@+id/BTNRandomise"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Randomise" />


        </LinearLayout>
    </ScrollView>


</FrameLayout>
