<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="estateco.estate.FragmentNewProperty">

    <!-- TODO: Update blank fragment layout -->
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <!--General Details-->
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Deal Details"
                android:textAlignment="center"
                android:textSize="24sp"
                android:textStyle="normal|bold" />

            <Spinner
                android:id="@+id/SPNewDealType"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:textAlignment="center" />

            <CheckBox
                android:id="@+id/CHKBXNewWholeApartment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Leasing whole apartment?"
                android:textAlignment="center"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="General Details"
                android:textAlignment="center"
                android:textSize="24sp"
                android:textStyle="normal|bold" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Title"
                android:textAlignment="center"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/ETNewTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Title"
                android:inputType="text|textPersonName"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/textView13"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Description"
                android:textAlignment="center"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/ETNewDesc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Description"
                android:inputType="text|textPersonName"
                android:textAlignment="center" />


            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Address Details"
                android:textAlignment="center"
                android:textSize="24sp"
                android:textStyle="normal|bold" />

            <TextView
                android:id="@+id/textView16"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Block"
                android:textAlignment="center"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/ETNewBlock"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Block number"
                android:inputType="text|number"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Floor Level"
                android:textAlignment="center"
                android:textSize="20sp" />

            <Spinner
                android:id="@+id/SPNewFloorLevel"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Street Name"
                android:textAlignment="center"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/ETNewStreetName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Street Name"
                android:inputType="text|textPersonName"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/textView22"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="House Details"
                android:textAlignment="center"
                android:textSize="24sp"
                android:textStyle="normal|bold" />

            <ImageView
                android:id="@+id/IMGVNewImage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                app:srcCompat="@drawable/ic_menu_camera" />

            <Button
                android:id="@+id/BTNNewImage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Select Photo" />


            <TextView
                android:id="@+id/textView23"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Flat Type"
                android:textAlignment="center"
                android:textSize="20sp" />

            <Spinner
                android:id="@+id/SPNewFlatType"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/textView27"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Price (SGD)"
                android:textAlignment="center"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/ETNewPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Price SGD(nearest hundred)"
                android:inputType="text|number"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/textView29"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Floor Area (SqMeters)"
                android:textAlignment="center"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/ETNewFloorArea"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Floor Area (SqMeters)"
                android:inputType="text|textPersonName"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/textView24"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Furnish Level"
                android:textAlignment="center"
                android:textSize="20sp" />

            <Spinner
                android:id="@+id/SPNewFurnishLevel"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/TVNewBedroomCount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="No. Of Bedroom(s)"
                android:textAlignment="center"
                android:textSize="20sp" />

            <Spinner
                android:id="@+id/SPNewBedroomCount"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/textView26"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="No. Of Bathroom(s)"
                android:textAlignment="center"
                android:textSize="20sp" />

            <Spinner
                android:id="@+id/SPNewBathroomCount"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:textAlignment="center" />

            <Button
                android:id="@+id/BTNCreateProperty"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Create" />

            <Button
                android:id="@+id/BTNNewRandom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Randomise" />


        </LinearLayout>
    </ScrollView>


</FrameLayout>
