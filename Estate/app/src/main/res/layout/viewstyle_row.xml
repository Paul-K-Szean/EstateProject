<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="10dp"
    android:paddingTop="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="22dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/TVLblPropertyID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/IMGVLblImage"
                android:text="PropertyID"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/TVLblDealType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="DealType"
                android:textAlignment="textStart"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/TVLblStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"

                android:text="Status"
                android:textAlignment="textEnd"
                android:textSize="16sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/TVLblFlatType"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="FlatType"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/TVLblFloorArea"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="FloorArea"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/TVLblPrice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginEnd="29dp"
                    android:layout_marginRight="29dp"
                    android:text="Price"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/TVLblOwnerName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="OwnerName"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/TVLblFloorLevel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="FloorLevel"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/TVLblStreetName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Streetname"
                    android:textSize="16sp" />

            </LinearLayout>

            <ImageView
                android:id="@+id/IMGVLblImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/ic_menu_camera" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>
