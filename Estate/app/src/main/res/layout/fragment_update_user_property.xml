<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="estateco.estate.FragmentUpdateUserProperty">

    <!-- TODO: Update blank fragment layout -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="1">

            <TextView
                android:id="@+id/textView19"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Deal Details"
                android:textAlignment="center"
                android:textSize="24sp"
                android:textStyle="normal|bold" />

            <TextView
                android:id="@+id/TVLblEditDealType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="DealType"
                android:textAlignment="center"
                android:textSize="20sp" />

            <Spinner
                android:id="@+id/SPEditDealType"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:textAlignment="center" />

            <CheckBox
                android:id="@+id/CHKBXEditWholeApartment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="WholeApartment"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="General Details"
                android:textAlignment="center"
                android:textSize="24sp"
                android:textStyle="normal|bold" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="CreatedOn"
                android:textAlignment="center"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/TVLblCreatedDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Create On"
                android:textAlignment="center"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/TVLblEditStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Status"
                android:textAlignment="center"
                android:textSize="20sp" />

            <Spinner
                android:id="@+id/SPEditStatus"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/TVLblEditTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Title"
                android:textAlignment="center"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/ETEditTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Title"
                android:inputType="textPersonName"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/TVLblEditDesc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Description"
                android:textAlignment="center"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/ETEditDesc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Desc"
                android:inputType="textPersonName"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/textView30"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Address Details"
                android:textAlignment="center"
                android:textSize="24sp"
                android:textStyle="normal|bold" />

            <TextView
                android:id="@+id/textView17"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Block"
                android:textAlignment="center"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/ETEditBlock"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Block number"
                android:inputType="text"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/TVLblEditFloorLevel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Floor Level"
                android:textAlignment="center"
                android:textSize="20sp" />

            <Spinner
                android:id="@+id/SPEditFloorLevel"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/TVLblEditStreetName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Street Name"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/ETEditStreetName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Street Name"
                android:inputType="textPersonName"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/textView1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="House Details"
                android:textAlignment="center"
                android:textSize="24sp"
                android:textStyle="normal|bold" />

            <ImageView
                android:id="@+id/IMGVEditImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/ic_menu_gallery" />

            <Button
                android:id="@+id/BTNEditPhoto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Select Photo" />

            <TextView
                android:id="@+id/TVLblEditFlatType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="FlatType"
                android:textAlignment="center"
                android:textSize="20sp" />

            <Spinner
                android:id="@+id/SPEditFlatType"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/TVLblEditPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Price (SGD$)"
                android:textAlignment="center"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/ETEditPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Price SGD(nearest hundred)"
                android:inputType="textPersonName"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/TVLblFloorArea"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Floor Area (Sq Meter)"
                android:textAlignment="center"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/ETEditFloorArea"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Floor Area (SqMeters)"
                android:inputType="textPersonName"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/TVLblEditFurnishLevel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="FurnishLevel"
                android:textAlignment="center"
                android:textSize="20sp" />

            <Spinner
                android:id="@+id/SPEditFurnishLevel"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/TVNoOfBedrooms"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bedroom(s)"
                android:textAlignment="center"
                android:textSize="20sp" />

            <Spinner
                android:id="@+id/SPEditBedroomCount"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/TVNoOfBathrooms"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bathroom(s)"
                android:textAlignment="center"
                android:textSize="20sp" />

            <Spinner
                android:id="@+id/SPEditBathroomCount"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:textAlignment="center" />

            <Button
                android:id="@+id/BTNEditPropertySave"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Save" />

            <Button
                android:id="@+id/BTNEditRandom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Randomise" />


        </LinearLayout>
    </ScrollView>
</LinearLayout>
